<div class="row">
  <span class="label label-default" style="color: #787C7E">
    Posted By:
    <%= question.user.try(:email) %>
    | Category:
    <%= question.category %> |
    <% if current_user.id == question.user_id %>
      <%= link_to 'Edit', edit_question_path(question) %> |
      <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %> |
    <% end %>
    <%= question.updated_at.strftime("%d-%b-%y %I:%M %P") %>
  </span>
</div>
<div class="row">
  <div class="col-md-8">
    <h3>
      Q: <%= question.body %> ?
    </h3>
  </div>
  <div class="col-md-2 pull-right">
    <span class="label label-default">
    </span>
  </div>
</div>
<br>
<% unless hide_answer_btn %>
  <%= link_to '+ Write Answer', new_answer_path(question_id: question.id) %> |
  <%= "#{question.answers.count} Answers"%>
<% else %>
  Your Answer
<%end%>
